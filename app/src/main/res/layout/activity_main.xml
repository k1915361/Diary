<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/StudentName"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:hint="My Name"
                android:text=""
                android:textColor="#818181"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="My book title"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Today's date 22-12-2022_01:00"
                android:inputType="date" />

            <EditText
                android:id="@+id/editPageFrom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="My page from"
                android:inputType="number" />

            <EditText
                android:id="@+id/editPageTo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="My page to"
                android:inputType="number" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="My comments"
                android:inputType="text" />

            <EditText
                android:id="@+id/commentsTeacher"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Teacher's comments"
                android:inputType="text" />

            <EditText
                android:id="@+id/testField"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="test..."
                android:inputType="text" />

            <TextView
                android:id="@+id/Diaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="My Diaries"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/TestTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Test Text View"
                android:textSize="20dp"
                android:text="" />

            <EditText
                android:id="@+id/UpdateOld"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="My diary ID"
                android:inputType="text" />

            <EditText
                android:id="@+id/SearchDiaryField"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Search My Diary"
                android:inputType="text" />

            <EditText
                android:id="@+id/UpdateNew"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="My new book title"
                android:inputType="text" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="0dp"
                android:text="Submit" />

            <Button
                android:id="@+id/UpdateStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update" />

            <Button
                android:id="@+id/DeleteStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete" />

            <Button
                android:id="@+id/GetDiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View My Diary" />

            <Button
                android:id="@+id/emailButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/purple_500"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/testScreen2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/purple_500"
                android:text="Go To Page"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

